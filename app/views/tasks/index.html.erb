<div class="p-2 gap-3">
  <h1 class="h1">My Tasks</h1>
  <div class="d-flex p-2 gap-3">
    <% @tasks.each do |task| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <%= link_to task_path(task) do %>
            <h5 class="card-title"><%= task.title %></h5>
          <% end %>
          <p class="card-text"><%= task.details %></p>
          <i class="<%= task.completed ? "fa-regular fa-square-check" : "fa-regular fa-square" %>"></i>
          <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-regular fa-trash-can"></i>
          <% end %>
          <%= link_to edit_task_path(task.id) do %>
            <i class="fa-regular fa-pen-to-square"></i>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
    <div>
    <%= link_to new_task_path do %>
      <button type="button" class="btn btn-primary">Add new Task</button>
    <% end %>
  </div>
</div>
